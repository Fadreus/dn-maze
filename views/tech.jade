mixin row_tech(name, attr_id, key)
  div.row
    div.col-xs-2= name
    div.col-xs-10.form-inline
      +selection(attr_id, key)
      if attr_id === 'weapon'
        div.disclaimer Disclaimer: Weapon Techs are NOT the same as in game. Please ensure the weapon skill you tech also exists in game.

mixin selection(attr_id, key)
  select.form-control.tech-select(id='tech-' + attr_id)
    option
    for job in line
      if job.Techs[key].length > 0
        optgroup(label=job.JobName)
          for skillID in job.Techs[key]
            option(value=skillID)= lookup[job.Skills[skillID].NameID]
  button.btn.btn-default.tech +1


+row_tech('Necklace', 'necklace', 'Necklace')
+row_tech('Earring', 'earring', 'Earring')
+row_tech('Ring 1', 'ring-1', 'Ring')
+row_tech('Ring 2', 'ring-2', 'Ring')
+row_tech('Weapon', 'weapon', 'Weapon')
+row_tech('Crest', 'crest', 'Crest')
